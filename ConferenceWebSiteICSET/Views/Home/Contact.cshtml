<!--contact-->
<section class="contact" id="contact">
    <div class="container">
        <div class="contact-grid">
            <h3>feel free to <span>contact us </span></h3>
        </div>

        <div class="contact-details">
            <h4>Our Contact Details</h4>
            <p>Email: support@company.com</p>
            <p>Phone: +1 123-456-7890</p>
            <p>Address: 123 Street, City, Country</p>
        </div>

        <form id="con_id">
            <div class="grid-contact">
                <div class="col-md-6 contact-left">
                    <p class="your-para">Name<span>*</span></p>
                    <input type="text" placeholder="Your Name" required>
                </div>
                <div class="col-md-6 contact-left">
                    <p class="your-para">Email address<span>*</span></p>
                    <input type="email" placeholder="Your Email" required>
                </div>
                <div class="col-md-6 contact-left">
                    <p class="your-para">Country Code<span>*</span></p>
                    <select id="country-code" required>
                        <option value="" disabled selected>Select Country Code</option>
                        <option value="US +1">United States (+1)</option>
                        <option value="IN +91">India (+91)</option>
                        <option value="UK +44">United Kingdom (+44)</option>
                        <option value="AU +61">Australia (+61)</option>
                        <option value="CA +1">Canada (+1)</option>
                        <!-- Add more country codes as needed -->
                    </select>
                </div>
                <div class="col-md-6 contact-left">
                    <p class="your-para">Contact Number<span>*</span></p>
                    <input type="text" id="contact-number" placeholder="Contact Number" required>
                </div>
                <div class="col-md-6 contact-left">
                    <p class="your-para">City<span>*</span></p>
                    <input type="text" placeholder="City" required>
                </div>
            </div>
            <p class="message-para">Message<span>*</span></p>
            <textarea cols="77" rows="6" placeholder="Your Message" required></textarea>
            <div class="send">
                <input type="submit" value="SEND">
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
</section>


