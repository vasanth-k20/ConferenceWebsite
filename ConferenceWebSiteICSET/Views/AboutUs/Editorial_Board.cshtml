@{
    ViewData["Title"] = "Editorial Board";
}


<link href="~/css/ediytBoard.css" rel="stylesheet" />

<!-- Background Image Section -->
<div id="intro-example" class="img-fluid" style="height: 30vh; width: 100%; background-image: url('/img/banner.jpg'); background-size: cover; background-position: center;">
    <div class="mask w-100 h-100 bg-dark bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
        <div class="text-white text-center px-3">
            <h2 class="fw-bold display-5 text-uppercase text-light">Editorial Board</h2>
            <div class="divider mx-auto my-3"></div>
        </div>
    </div>
</div>


<!-- committee Section -->
<div class="committee-container">
    <!-- Section Heading -->
    <div class="committee-header">
        <h3>Committee Members</h3>
    </div>

    <!-- First Row with Two Members -->
    <div class="committee-row">
        <div class="committee-card">
            <strong>Dr. B. Deepanraj</strong>
            <span>ASP / Mechanical Engg.</span>
            Prince Mohammed Bin Fahd University,<br>
            <em>Al Khobar, Saudi Arabia.</em>
        </div>
        <div class="committee-card">
            <strong>Dr. D. Lenin Singaravelu</strong>
            <span>ASP / Production Engg.</span>
            National Institute of Technology,<br>
            <em>Trichy.</em>
        </div>
    </div>

    <!-- Second Row with Two Members -->
    <div class="committee-row">
        <div class="committee-card">
            <strong>Dr. N. Senthil Kumar</strong>
            <span>AP & Head / Mech</span>
            National Institute of Technology,<br>
            <em>Karaikal, UT of Puducherry.</em>
        </div>
        <div class="committee-card">
            <strong>Dr. K. Devakumar</strong>
            <span>Manager</span>
            Advanced Technology Products,<br>
            <em>BHEL, Trichy.</em>
        </div>
    </div>

    <!-- Single Member at the Center -->
    <div class="committee-row">
        <div class="committee-card large">
            <strong>Dr. Nadir Dizge</strong>
            <span>Professor</span>
            Dept. of Environmental Science & Engg.,<br>
            <em>Mersin University, Turkey.</em>
        </div>
    </div>
</div>


<!--avenue & contact-->
<section class="avenue" id="avenue">
    <div class="avenue-container">


        <!-- Where and When Section -->
        <div class="event-details">
            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h4 class="detail-title">WHERE</h4>
                <p class="detail-info">
                    V.R.S. College of Engineering and Technology<br>
                    Arasur - 607 107<br>
                    Villupuram District
                </p>
            </div>

            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h4 class="detail-title">WHEN</h4>
                <p class="detail-info">
                    26<sup>th</sup> April, 2024<br>
                    (Friday)
                </p>

                <!-- Register Button -->
                <div class="register-button-container">
                    <a class="register-button" asp-action="New_paper_submission" asp-controller="Authors_Desk">Register</a>
                </div>

            </div>

            <!-- Contact Details Section -->
            <div class="event-detail-box">
                <div class="contact-details">
                    <h3><span>inquiries</span></h3>
                    <h4>CONTACT</h4>
                    <p><i class="fas fa-envelope"></i> Email: support@company.com</p>
                    <p><i class="fas fa-phone"></i> Phone: +1 123-456-7890</p>
                    <p><i class="fas fa-map"></i> Address: 123 Street, City, Country</p>
                </div>
            </div>

        </div>

    </div>
</section>

<!--footer-->
