    <!-- Row 3 -->
    <div class="important-date-row blue-row">
        <div class="date-title">Camera Ready Paper Submission</div>
        <div class="date-info">20-04-2024</div>
    </div>

    <!-- Row 4 -->
    <div class="important-date-row lavender-row">
        <div class="date-title">Last Date for Registration / Payment</div>
        <div class="date-info">22-04-2024</div>
    </div>
</div>


