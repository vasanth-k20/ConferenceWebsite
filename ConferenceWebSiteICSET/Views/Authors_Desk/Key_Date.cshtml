@{
    ViewData["Title"] = "Key Dates";
}

<link href="~/css/keydate.css" rel="stylesheet" />

<!-- Background Image Section -->
<div id="intro-example" class="img-fluid" style="height: 30vh; width: 100%; background-image: url('/img/bannerauthor.jpg'); background-size: cover; background-position: center;">
    <div class="mask w-100 h-100 bg-dark bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
        <div class="text-white text-center px-3">
            <h2 class="fw-bold display-5 text-uppercase text-light">Key Date</h2>
            <div class="divider mx-auto my-3"></div>
        </div>
    </div>
</div>

<!-- date Section -->
<section class="important-dates-container">
    <!-- Heading -->
    <h2 class="important-dates-heading">Important Dates</h2>

    <!-- Row 1 -->
    <div class="important-date-row lavender-row">
        <div class="date-title">Last Date for Full Paper Submission</div>
        <div class="date-info">17-04-2024</div>
    </div>

    <!-- Row 2 -->
    <div class="important-date-row lavender-row">
        <div class="date-title">Notification of Paper Acceptance</div>
        <div class="date-info">18-04-2024</div>
    </div>

    <!-- Row 3 -->
    <div class="important-date-row lavender-row">
        <div class="date-title">Camera Ready Paper Submission</div>
        <div class="date-info">20-04-2024</div>
    </div>

    <!-- Row 4 -->
    <div class="important-date-row lavender-row">
        <div class="date-title">Last Date for Registration / Payment</div>
        <div class="date-info">22-04-2024</div>
    </div>
</section>


<!--avenue & contact-->
<section class="avenue" id="avenue">
    <div class="avenue-container">


        <!-- Where and When Section -->
        <div class="event-details">
            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h4 class="detail-title">WHERE</h4>
                <p class="detail-info">
                    V.R.S. College of Engineering and Technology<br>
                    Arasur - 607 107<br>
                    Villupuram District
                </p>
            </div>

            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h4 class="detail-title">WHEN</h4>
                <p class="detail-info">
                    26<sup>th</sup> April, 2024<br>
                    (Friday)
                </p>

                <!-- Register Button -->
                <div class="register-button-container">
                    <a class="register-button" asp-action="New_paper_submission" asp-controller="Authors_Desk">Register</a>
                </div>

            </div>

            <!-- Contact Details Section -->
            <div class="event-detail-box">
                <div class="contact-details">
                    <div class="icon">
                        <i class="fa-solid fa-address-card"></i>
                    </div>
                    <h4>CONTACT</h4>
                    <p><i class="fas fa-envelope"></i> Email: support@company.com</p>
                    <p><i class="fas fa-phone"></i> Phone: +1 123-456-7890</p>
                    <p><i class="fas fa-map"></i> Address: 123 Street, City, Country</p>
                </div>
            </div>

        </div>

    </div>
</section>

<!--footer-->
<section class="footer">
    <div class="footcontainer">
        <div class="footer-class">
            <p class="footer-grid">
                Copyrights © 2024, All Rights Reserved. Powered By BIICCSI
            </p>
            <ul class="social-ic-icons">
                <li class="facebook"><a href="#"><span></span></a></li>
                <li class="twitter"><a href="#"><span></span></a></li>
                <li class="gmail"><a href="#"><span></span></a></li>
                <li class="browser"><a href="#"><span></span></a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
    <a href="#" id="toTop"><span id="toTopHover"></span></a>
</section>