    <div class="avenue-container">


        <!-- Where and When Section -->
        <div class="event-details">
            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h4 class="detail-title">WHERE</h4>
                <p class="detail-info">
                    V.R.S. College of Engineering and Technology<br>
                    Arasur - 607 107<br>
                    Villupuram District
                </p>
            </div>

            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h4 class="detail-title">WHEN</h4>
                <p class="detail-info">
                    26<sup>th</sup> April, 2024<br>
                    (Friday)
                </p>

                <!-- Register Button -->
                <div class="register-button-container">
                    <a class="register-button" asp-action="New_paper_submission" asp-controller="Authors_Desk">Register</a>
                </div>

            </div>

            <!-- Contact Details Section -->
            <div class="event-detail-box">
                <div class="contact-details">
                    <h3><span>inquiries</span></h3>
                    <h4>CONTACT</h4>
