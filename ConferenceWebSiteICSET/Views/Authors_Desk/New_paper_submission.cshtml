@model NewpaperSub

@{
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string;
}
@{
    ViewData["Title"] = "Paper Submission";
}



<link href="~/css/papersub.css" rel="stylesheet" />


<!-- Background Image Section -->
<div id="intro-example" class="img-fluid" style="height: 30vh; width: 100%; background-image: url('/css/banner2.jpg'); background-size: cover; background-position: center;">
    <div class="mask w-100 h-100 bg-dark bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
        <div class="text-white text-center px-3">
            <h2 class="fw-bold display-5 text-uppercase text-light">New Paper Submission</h2>
            <div class="divider mx-auto my-3"></div>
        </div>
    </div>
</div>


<div class="container my-5">
    <!-- Alert for Messages -->
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @messageType">
            @message
        </div>
    }

    <!-- Paper Submission Form -->
    <h3 class="form-heading">
        <i class="bi bi-file-earmark-text"></i> Paper Submission
    </h3>

    <div class="form-container">
        <div class="form-card">
            <form asp-controller="Authors_Desk" asp-action="NewPaperSubmission" method="post" enctype="multipart/form-data" novalidate>
                <div class="form-group">
                    <label for="Papertitle">
                        <i class="bi bi-file-earmark-text"></i> Paper Title:
                    </label>
                    <input type="text" id="Papertitle" name="Papertitle" required />
                </div>

                <div class="form-group">
                    <label for="AuthorFullName">
                        <i class="bi bi-person"></i> Author Full Name:
                    </label>
                    <input type="text" id="AuthorFullName" name="AuthorFullName" required />
                </div>

                <div class="form-group">
                    <label for="AuthorMobile">
                        <i class="bi bi-telephone"></i> Author Mobile Number:
                    </label>
                    <input type="tel" id="AuthorMobile" name="AuthorMobile" required />
                </div>

                <div class="form-group">
                    <label for="AuthorEmail">
                        <i class="bi bi-envelope"></i> Author Email Address:
                    </label>
                    <input type="email" id="AuthorEmail" name="AuthorEmail" required />
                </div>

                <div class="form-group">
                    <label for="AuthorInstitution">
                        <i class="bi bi-building"></i> Author Institution Name:
                    </label>
                    <input type="text" id="AuthorInstitution" name="AuthorInstitution" required />
                </div>

                <div class="form-group">
                    <label for="AuthorCategory">
                        <i class="bi bi-ui-checks"></i> Author Category:
                    </label>
                    <select id="AuthorCategory" name="AuthorCategory" required>
                        <option value="">-- Select Category --</option>
                        <option value="student">Student</option>
                        <option value="faculty">Faculty</option>
                        <option value="researcher">Researcher</option>
                        <option value="others">Others</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="PaperFile">
                        <i class="bi bi-upload"></i> Upload Paper:
                    </label>
                    <input type="file" id="PaperFile" name="PaperFile" required />
                </div>

                <div class="form-button">
                    <button type="submit">
                        <i class="bi bi-send"></i> Submit Paper
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--contact-->
<section class="contact" id="contact">
    <div class="contact-container">

        <!-- Contact Header -->
        <div class="contact-header">
            <h3>Feel Free to <span>Contact Us</span></h3>
            <p>We are here to assist you with any queries. Reach out to us anytime!</p>
        </div>

        <!-- Where and When Section -->
        <div class="event-details">
            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h4 class="detail-title">WHERE</h4>
                <p class="detail-info">
                    V.R.S. College of Engineering and Technology<br>
                    Arasur - 607 107<br>
                    Villupuram District
                </p>
            </div>

            <div class="event-detail-box">
                <div class="icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h4 class="detail-title">WHEN</h4>
                <p class="detail-info">
                    26<sup>th</sup> April, 2024<br>
                    (Friday)
                </p>
            </div>
        </div>

        <!-- Register Button -->
        <div class="register-button-container">
            <a class="register-button" asp-action="New_paper_submission" asp-controller="Authors_Desk">Register</a>
        </div>

        <!-- Contact Details Section -->
        <div class="contact-details">
            <h2>For any inquiries</h2>
            <h4>CONTACT</h4>
            <p><i class="fas fa-envelope"></i> Email: support@company.com</p>
            <p><i class="fas fa-phone"></i> Phone: +1 123-456-7890</p>
            <p><i class="fas fa-map"></i> Address: 123 Street, City, Country</p>
        </div>

    </div>
</section>



